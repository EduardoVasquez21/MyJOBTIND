@model IEnumerable<Anuncio>


<link rel="stylesheet" href="~/css/Fondoatodocss.css" />

<script src="https://kit.fontawesome.com/16bd784e77.js" crossorigin="anonymous"></script>
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<h1 class=" animate__animated animate__bounceInUp">Annoucement´s List</h1>


<table id="mitablastu" class="table table-dark table-dark">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(x => x.Id)</th>
            <th>@Html.DisplayNameFor(x => x.Usuario.Nombres)</th>
            <th>@Html.DisplayNameFor(x => x.Usuario.Apellidos)</th>
            <th>@Html.DisplayNameFor(x => x.Categoria)</th>
            <th>@Html.DisplayNameFor(x => x.Empresa.NombreEmpresa)</th>
            <th>@Html.DisplayNameFor(x => x.Empresa.Vacante)</th>
            <th>@Html.DisplayNameFor(x => x.Anuncios)</th>
            <th>Actions</th>
        </tr>

    </thead>
    <tbody>

        @foreach (var anuncio in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => anuncio.Id)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => anuncio.Usuario.Nombres)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => anuncio.Usuario.Apellidos)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => anuncio.Categoria)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => anuncio.Empresa.NombreEmpresa)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => anuncio.Empresa.Vacante)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => anuncio.Anuncios)
                </th>
                <td>
                    <a class="btn btn-outline-primary" asp-controller="InfoAnuncio" asp-action="Info"><i class="fas fa-edit"></i>Ver Mas</a>
                </td>
            </tr>
        }

    </tbody>

</table>

<a class="btn btn-outline-secondary" asp-controller="Home" asp-action="MenuTrabajador">Back</a>
