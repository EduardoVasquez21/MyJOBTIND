@model Empresa

@{
    ViewData["Title"] = "Company´s Data";
}

<script src="https://kit.fontawesome.com/16bd784e77.js" crossorigin="anonymous"></script>
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 class=" animate__animated animate__flash">Company´s Data</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="@ViewBag.State">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <i class="fas fa-book"></i>
                        <label asp-for="NombreEmpresa" class="control-label"></label>
                        <input asp-for="NombreEmpresa" class="form-control" />
                        <span asp-validation-for="NombreEmpresa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-phone-alt"></i>
                        <label asp-for="TelefonoEmp" class="control-label"></label>
                        <input asp-for="TelefonoEmp" class="form-control" />
                        <span asp-validation-for="TelefonoEmp" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-envelope"></i>
                        <label asp-for="EmailEmp" class="control-label"></label>
                        <input asp-for="EmailEmp" class="form-control" />
                        <span asp-validation-for="EmailEmp" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <i class="far fa-star"></i>
                        <label asp-for="Vacante" class="control-label"></label>
                        <input asp-for="Vacante" class="form-control" />
                        <span asp-validation-for="Vacante" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <i class="fas fa-lock"></i>
                        <label asp-for="ContraseñaEmp" class="control-label"></label>
                        <input asp-for="ContraseñaEmp" class="form-control" id="Show" />
                        <span asp-validation-for="ContraseñaEmp" class="text-danger"></span>

                        <label>Ocultar Contraseña</label>
                        <input type="checkbox" name="" onclick="myFunction()">
                        <br><br>

                    </div>

                    <script type="text/javascript">
                        function myFunction() {
                            var Show = document.getElementById('Show');
                            if (Show.type == 'password') {
                                Show.type = 'text';
                            }
                            else {
                                Show.type = 'password';
                            }
                        }
                    </script>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="CompanyList">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>