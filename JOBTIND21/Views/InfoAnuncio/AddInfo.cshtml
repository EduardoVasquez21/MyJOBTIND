@model InfoAnuncioViewModel

@{
    ViewData["Title"] = "Anouncement´s Info";
}
<script src="https://kit.fontawesome.com/16bd784e77.js" crossorigin="anonymous"></script>
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 class=" animate__animated animate__fadeInTopRight">Anouncement´s information</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="AddInfo">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <i class="fas fa-user-tie"></i>
                        <label asp-for="AnuncioID" class="control-label"></label>
                        <select asp-for="AnuncioID" class="form-control" asp-items="ViewBag.Info"></select>
                        <span asp-validation-for="AnuncioID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-book"></i>
                        <label asp-for="EdadRequerida" class="control-label"></label>
                        <input asp-for="EdadRequerida" class="form-control" />
                        <span asp-validation-for="EdadRequerida" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-book"></i>
                        <label asp-for="Requisitos" class="control-label"></label>
                        <input asp-for="Requisitos" class="form-control" />
                        <span asp-validation-for="Requisitos" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-book"></i>
                        <label asp-for="Horarios" class="control-label"></label>
                        <input asp-for="Horarios" class="form-control" />
                        <span asp-validation-for="Horarios" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-book"></i>
                        <label asp-for="Salario" class="control-label"></label>
                        <input asp-for="Salario" class="form-control" />
                        <span asp-validation-for="Salario" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-book"></i>
                        <label asp-for="Lugar" class="control-label"></label>
                        <input asp-for="Lugar" class="form-control" />
                        <span asp-validation-for="Lugar" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="InformationAnun">Return</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
