@model PerfilTrabajadorViewModel

@{
    ViewData["Title"] = "JOBTIND21";
}

<link rel="stylesheet" href="~/css/FondoNuevo.css" />
<script src="https://kit.fontawesome.com/16bd784e77.js" crossorigin="anonymous"></script>
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 class=" animate__animated animate__fadeInTopRight">Description´s Data</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="AddDescription">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <i class="fas fa-user-tie"></i>
                        <label asp-for="UserTrabajadorID" class="control-label"></label>
                        <select asp-for="UserTrabajadorID" class="form-control" asp-items="ViewBag.Trabajador"></select>
                        <span asp-validation-for="UserTrabajadorID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-id-card"></i>
                        <label asp-for="DUI" class="control-label"></label>
                        <input asp-for="DUI" class="form-control" />
                        <span asp-validation-for="DUI" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-mobile"></i>
                        <label asp-for="Telephone" class="control-label"></label>
                        <input asp-for="Telephone" class="form-control" />
                        <span asp-validation-for="Telephone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-info-circle"></i>
                        <label asp-for="CVLink" class="control-label"></label>
                        <input asp-for="CVLink" class="form-control" />
                        <span asp-validation-for="CVLink" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-book"></i>
                        <label asp-for="Descripcion" class="control-label"></label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Descripcion">Return</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
